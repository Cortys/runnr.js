@import "vars"

body
	margin: 0
	padding: 0
	font-family: fontType
	font-size: fontNormal
	cursor: default
	background-color: lightGray
	color: dark

#head
	background-color: light
	position: absolute
	top: 0
	left: 0
	width: auto
	right: 0
	height: big
	shadow: bottom

#content
	position: absolute
	top: big
	bottom: 0
	left: 0
	right: 0
	width: auto
	height: auto

#breadcrumb
	@extend #head
	shadow: top
	top: auto
	bottom: 0
	height: normal
