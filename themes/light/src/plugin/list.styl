@import "../vars"

.list
	reset()
	position: relative
	list-style: none

	margin: distance.far

	li
		box-sizing: border-box
		enable3d()
		fastTransition()
		cursor: pointer

	&.big
		&.img li
			position: relative
			margin: distance.narrow 0 distance.narrow + distance.far 0
			height: size.bigger

			border-radius: size.bigger * 0.5

			.img
				position: absolute
				width: size.bigger
				height: size.bigger
				background-color: #2ba3c4
				border-radius: 50%
				border: distance.narrow solid color.light
				margin: - distance.narrow

			h2
				position: absolute
				left: size.bigger + distance.far + distance.narrow
				font-weight: normal
				font-size: font.big
				margin: 0
				padding: 0
				line-height: 1em
				height: 1em
				bottom: 50%

			p
				position: absolute
				left: size.bigger + distance.far + distance.narrow
				bottom: 0
				height: size.bigger * 0.5
				line-height: size.bigger * 0.5
				font-size: font.small
				margin: 0
				padding: 0
				i
					font-size: font.smallIcon
					vertical-align: text-top

	&.clickable
		li

			&.active
				background-color: color.darkGray
				color: color.light
