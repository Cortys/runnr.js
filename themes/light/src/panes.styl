@import "vars"

#panes
	position: absolute
	top: close
	left: narrow
	right: narrow
	bottom: normal + close

	.pane
		position: absolute
		width: auto
		height: auto
		top: 0
		bottom: 0

		fastTransition()

		.inner
			position: absolute
			width: auto
			height: auto
			left: narrow
			right: narrow
			top: 0
			bottom: 0

			background-color: light
			darkShadow()
			border-radius: narrow

		for visible in (1..paneCount)
			align = (1-(visible/paneCount))*0.5
			vMin = visible*1 - 1
			for pos in (0..vMin)
				&.visible{visible}.pos{pos}
					left: ((pos/paneCount) + align)*100%
					right: (1 - ((pos+1)/paneCount) - align)*100%

		&.posGone
			left: (-1/paneCount)*100%
			right: 100%
			opacity: 0
		
		&.posComing
			left: 100%
			right: (-1/paneCount)*100%
			opacity: 0
