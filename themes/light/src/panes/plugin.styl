@import "../vars"

plugin-renderer, plugin-renderer > span

	position: absolute
	width: auto
	height: auto
	top: 0
	left: 0
	bottom: 0
	right: 0
	overflow: hidden

plugin-renderer > span
	border-radius: size.radius

	iframe
		position: static
		width: 100%
		height:100%
		top: 0
		left: 0
		bottom: 0
		right: 0
		border-style: none
