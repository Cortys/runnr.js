{
	"root": true,
	"extends": "cortys",
	"plugins": [
		"require-path-exists"
	],
	"rules": {
		"new-cap": ["warn", {
			"capIsNewExceptions": ["Mixin", "Persistable", "UpdateEmitter", "Dedupe", "Node"],
			"newIsCapExceptions": ["events"]
		}],
		"require-path-exists/notEmpty": "error",
		"require-path-exists/tooManyArguments": "error",
		"require-path-exists/exists": "error"
	}
}
